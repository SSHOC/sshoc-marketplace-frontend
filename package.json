{
  "name": "sshoc-marketplace-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@testing-library/cypress": "^4.2.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "commitizen": "^4.0.3",
    "cross-env": "^5.2.1",
    "cypress": "^3.4.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-cypress": "^2.6.1",
    "husky": ">=1",
    "is-ci": "^2.0.0",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "redux-devtools-extension": "^2.13.8",
    "serve": "^11.2.0",
    "standard-version": "^7.0.0",
    "start-server-and-test": "^1.10.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended",
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,cypress}/**/*.{js,ts}": [
      "eslint",
      "prettier --write",
      "git add"
    ],
    "{src,cypress}/**/*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "proxy": "http://localhost:5000",
  "scripts": {
    "build": "react-scripts build",
    "cm": "git-cz",
    "cy:open": "cross-env CYPRESS_CRASH_REPORTS=0 cypress open",
    "cy:run": "cross-env CYPRESS_CRASH_REPORTS=0 cypress run",
    "format": "prettier --write \"{src,cypress}/**/*.{js,ts,css,json,md}\"",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "mockserver": "node server",
    "pretest:e2e:run": "yarn build",
    "release": "standard-version",
    "serve": "serve --no-clipboard --single --listen 3000 build",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "yarn test --coverage --watchAll=false",
    "test:e2e": "is-ci && yarn test:e2e:run || yarn test:e2e:dev",
    "test:e2e:dev": "start-server-and-test start http://localhost:3000 cy:open",
    "test:e2e:run": "start-server-and-test serve http://localhost:3000 cy:run"
  }
}
