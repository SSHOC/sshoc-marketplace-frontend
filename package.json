  "resolutions": {
    "webpack": "5.x",
    "webpack-dev-middleware": "5.x",
    "webpack-virtual-modules": "0.4.x"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": "@acdh-oeaw/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@stefanprobst/eslint-config-next",
    "overrides": [
      {
        "files": [
          "**/*.cjs"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      },
      {
        "files": [
          "src/data/**/api/*.ts",
          "src/data/**/hooks/*.ts",
          "src/__templates__/**/page.tsx",
          "src/pages/**/*.page.tsx",
          "src/pages/**/*.page.template.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-namespace": "off"
        }
      },
      {
        "files": [
          "src/data/**/hooks/*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ],
    "ignorePatterns": "public/mockServiceWorker.js"
  },
  "lint-staged": {
    "*.@(js|mjs|ts|tsx)": [
      "eslint --fix --cache --cache-location .next/cache/eslint/",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --cache --cache-location .next/cache/stylelint/ --fix",
      "prettier --write"
    ],
    "*.!(css|js|mdx|mjs|ts|tsx)": [
      "prettier --ignore-unknown --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "postcss": {
    "plugins": {
      "postcss-custom-media": {},
      "postcss-nesting": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@stefanprobst/prettier-config",
  "remarkConfig": {
    "plugins": [
      "frontmatter",
      "gfm"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged"
  },
  "stylelint": {
    "extends": "@stefanprobst/stylelint-config",
    "rules": {
      "block-no-empty": [
        true,
        {
          "severity": "warning"
        }
      ]
    }
  }
}
