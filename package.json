{
  "name": "sshoc-marketplace-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@stefanprobst/menu-button": "^0.5.4-c",
    "@styled-system/css": "^5.0.23",
    "@styled-system/variant": "^5.1.2",
    "detab": "^2.0.2",
    "downshift": "^3.4.2",
    "focus-visible": "^5.0.2",
    "lodash-es": "^4.17.15",
    "polished": "^3.4.2",
    "prism-react-renderer": "^1.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.1",
    "react-scripts": "^3.3.0",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "rehype-react": "^4.0.1",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^5.0.0",
    "remark-stringify": "^7.0.4",
    "strip-markdown": "^3.1.1",
    "styled-components": "^5.0.0",
    "typeface-poppins": "^0.0.72",
    "unified": "^8.4.2",
    "unist-builder": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@storybook/addon-a11y": "^5.2.6",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/preset-create-react-app": "^1.3.2",
    "@storybook/react": "^5.2.6",
    "@testing-library/cypress": "^4.2.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@testing-library/user-event": "^7.1.2",
    "commitizen": "^4.0.3",
    "cross-env": "^5.2.1",
    "cypress": "^3.8.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-cypress": "^2.6.1",
    "husky": ">=1",
    "is-ci": "^2.0.0",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "serve": "^11.2.0",
    "source-map-explorer": "^2.1.2",
    "standard-version": "^7.0.0",
    "start-server-and-test": "^1.10.0"
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  },
  "lint-staged": {
    "{src,cypress}/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ],
    "{src,cypress}/**/*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "proxy": "http://localhost:8080",
  "scripts": {
    "analyze": "source-map-explorer \"build/static/js/*.js\"",
    "build": "react-scripts build",
    "build:storybook": "build-storybook",
    "cm": "git-cz",
    "cy:open": "cross-env CYPRESS_CRASH_REPORTS=0 cypress open",
    "cy:run": "cross-env CYPRESS_CRASH_REPORTS=0 cypress run",
    "format": "yarn prettier --check",
    "format:fix": "yarn prettier --write",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "mockserver": "node mockserver",
    "preanalyze": "yarn build",
    "pretest:e2e:run": "yarn build",
    "prettier": "prettier --config package.json  \"{src,cypress}/**/*.{js,jsx,ts,tsx,css,json,md}\" --ignore-path .gitignore",
    "release": "standard-version",
    "serve": "serve --no-clipboard --single --listen 3000 build",
    "serve:storybook": "serve --no-clipboard --listen 9009 storybook-static",
    "start": "react-scripts start",
    "start:storybook": "start-storybook -p 9009",
    "test": "react-scripts test --passWithNoTests",
    "test:coverage": "yarn test --coverage --watchAll=false",
    "test:e2e": "is-ci && yarn test:e2e:run || yarn test:e2e:dev",
    "test:e2e:dev": "start-server-and-test start http://localhost:3000 cy:open",
    "test:e2e:run": "start-server-and-test serve http://localhost:3000 cy:run"
  }
}
