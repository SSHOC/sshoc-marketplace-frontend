{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    "*.config.mjs",
    "test/stub.js"
  ],
  "exclude": ["node_modules"]
}
