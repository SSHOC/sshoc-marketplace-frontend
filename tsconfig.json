{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "react/next",
      "@jest/types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "app.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.config.mjs",
    "scripts/*.loader.cjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "public"
  ]
}
